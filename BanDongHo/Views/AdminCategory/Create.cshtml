@model BanDongHo.Models.Category

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="~/Style/admin.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.css">
</head>
<body>
    <style>
        .control-label2{
            margin-right:20px;
            margin-top:7px;
        }
        .control-label1 {
            margin-right: 100px;
            margin-top: 7px;
        }
        .btn_back {
            font-size:15px;
            border: 1px solid #808080;
            padding: 10px;
            background-color: #46d251;
            border-radius:10px
        }
        .form-control{
            width:400px;
            height:30px;
            border-radius:10px;
        }
    </style>
    <div class="container">
        <div class="sidebar">
            <a href="@Url.Action("Index","HomePage")" class="item">
                <img class="icon" src="~/Image/icon_admin1.png" alt="">
                <div style="list-style: bold;font-weight: 600; font-size: 24px;" class="text">
                    Admin website

                </div>
            </a>
            <hr>
            <a href="@Url.Action("Index","AdminProduct")" class="item">
                <img class="icon" src="~/Image/icon_product.png" alt="">
                <div class="text">
                    Sản phẩm

                </div>
            </a>
            <a style="color:black;text-decoration:none;" href="@Url.Action("DanhSachPhanLoai","AdminCategory")" class="item">
                <img class="icon" src="~/Image/icon_category.png" alt="">
                <div class="text">
                    Phân loại

                </div>
            </a>
            <a href="@Url.Action("Index","Admin")" class="item">
                <img class="icon" src="~/Image/icon_khachhang.jpg" alt="">
                <div class="text">
                    Thống tin khách hàng

                </div>
            </a>
            <a style="color:black;text-decoration:none;" href="@Url.Action("DanhSachDonHang","QlyNhapHang")" class="item">
                <img class="icon" src="~/Image/icon_bil.png" alt="">
                <div class="text">
                    Danh sách đơn hàng

                </div>
            </a>
            <a style="color:black;text-decoration:none;" href="@Url.Action("DanhSachChuaDuyet","QlyNhapHang")" class="item">
                <img class="icon" src="~/Image/icon_bill.png" alt="">
                <div class="text">
                    Chờ duyệt

                </div>
            </a>
            <a style="color:black;text-decoration:none;" href="@Url.Action("Index","AdminFavorite")" class="item">
                <img class="icon" src="~/Image/favorite1.jpg" alt="">
                <div class="text">
                    Khách hàng yêu thích

                </div>
            </a>
            <a style="color:black;text-decoration:none;" href="@Url.Action("Index","TKDS")" class="item">
                <img class="icon" src="~/Image/icon_thongke.jpg" alt="">
                <div class="text">
                    Thống kê doanh thu

                </div>
            </a>
        </div>
        <div class="nav">
            <div class="content">
                @using (Html.BeginForm())
                {
                    if (TempData["thongbao"] != null)
                    {
                        <div style="margin-top:30px" class="alert alert-success alert-dismissible" role="alert">
                            <strong>@TempData["thongbao"]</strong>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                    @Html.AntiForgeryToken()
                    <h3 style="text-align:center">Thêm phân loại</h3>
                    <div style="margin-left:100px;margin-top:50px" class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div style="display:flex;margin-right:20px;margin-bottom:25px" class="form-group">
                            @Html.Label("ID", htmlAttributes: new { @class = "control-label1 col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.IDPhanloai, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.IDPhanloai, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div style="display:flex;margin-right:20px;margin-bottom:40px" class="form-group">
                            @Html.Label("Tên phân loại", htmlAttributes: new { @class = "control-label2 col-md-2" })
                            <div class="col-md-5">
                                @Html.EditorFor(model => model.TenPhanLoai, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenPhanLoai, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input style="cursor:pointer;padding: 10px; border-radius: 10px; background-color: rgb(241, 241, 128);border:none;margin-right:20px;font-size:15px" type="submit" value="Thêm mới" class="btn btn-success" />
                                @Html.ActionLink("Trở về", "DanhSachPhanLoai", null, new { @class = "btn btn-danger btn_back" })
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
        
       
    
        
</body>
</html>
