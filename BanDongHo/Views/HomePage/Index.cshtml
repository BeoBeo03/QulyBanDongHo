    <script>
        // Biến để theo dõi số sản phẩm đã hiển thị
        var displayedProducts = 3;

        // Thêm sự kiện click cho nút "Xem thêm"
        document.getElementById("show-more-button").addEventListener("click", function () {
            // Lấy tất cả các phần tử sản phẩm
            var productElements = document.querySelectorAll(".element");

            // Hiển thị thêm sản phẩm nếu có
            for (var i = displayedProducts; i < productElements.length; i++) {
                productElements[i].style.display = "block";
            }

            // Cập nhật số sản phẩm đã hiển thị
            displayedProducts = productElements.length;

            // Hiển thị nút "Thu gọn" và ẩn nút "Xem thêm"
            document.getElementById("show-more-button").style.display = "none";
            document.getElementById("show-less-button").style.display = "block";
        });

